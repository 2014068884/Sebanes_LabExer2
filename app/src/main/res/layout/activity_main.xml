<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sebanes.sebanes_labexer2.MainActivity">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/tv_user"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/et_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_user"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_pass"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/btn_shared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="savePref"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="100dp"
        android:text="Shared Preferences"/>

    <Button
        android:id="@+id/btn_internal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveIntern"
        android:layout_below="@+id/btn_shared"
        android:layout_marginLeft="100dp"
        android:text="Internal Storage"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="next"
        android:layout_below="@+id/btn_internal"
        android:layout_marginLeft="140dp"
        android:text="Next"/>
</RelativeLayout>
